  <metadata>
    <id>PresenceLight</id>
    <version>$version$</version>
    <title>PresenceLight</title>
    <authors>Isaac Levin</authors>
    <owners>Isaac Levin</owners>
    <licenseUrl>https://github.com/isaacrlevin/PresenceLight/blob/master/LICENSE</licenseUrl>
