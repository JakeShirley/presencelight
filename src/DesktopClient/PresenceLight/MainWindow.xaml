<Window x:Class="PresenceLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:PresenceLight"
        xmlns:lc="clr-namespace:PresenceLight.Controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" Title="PresenceLight" Icon="Icons/Icon.ico" Height="1100" Width="750">
    <Grid>
        <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Sign In">
                <lc:LandingPage x:Name="landingPage"
                                onExitClick="OnExitClick"
                                onOpenClick="OnOpenClick"
                                onRequestNavigate="Hyperlink_RequestNavigate"
                                onSignInClicked="SignIn_Click"
                                onSignOutClicked="SignOutButton_Click" onNotifyIconDoubleClick="OnNotifyIconDoubleClick"
                                onTurnOffSync="OnTurnOffSyncClick"
                                onTurnOnSync="OnTurnOnSyncClick"   />
            </TabItem>
            <TabItem Header="Set Light Colors">
                <lc:LightColors x:Name="lightColors" onSetColorClick="SetColor_Click" onSetTeamsPresenceClick="SetTeamsPresence_Click" onSyncThemeClick="SyncTheme_Click" />
            </TabItem>
            <TabItem Header="Configure Phillips Hue" >
                <lc:PhillipsHue x:Name="phillipsHue"
                                oncbHueIsDisabledChange="cbHueIsDisabledChange"
                                oncbIsPhillipsEnabledChanged="cbIsPhillipsEnabledChanged"
                                oncbUseHueActivityStatus="cbUseHueActivityStatus"
                                oncbUseRemoteApiChanged="cbUseRemoteApiChanged"
                                onddlHueLightsSelectionChanged="ddlHueLights_SelectionChanged"
                                onFindBridgeClick="FindBridge_Click"
                                onHueApiKeyGet="HueApiKey_Get"
                                onHueIpAddressTextChanged="HueIpAddress_TextChanged"
                                onRegisterBridgeClick="RegisterBridge_Click"
                                onSaveHueClick="SaveHue_Click"
                                />
            </TabItem>
            <TabItem Header="Configure Yeelight" >
                <lc:Yeelight x:Name="yeelight"
                             oncblsYeelightEnabledChanged="cbIsYeelightEnabledChanged"
                             oncbUseYeelightActivityStatus="cbUseYeelightActivityStatus"
                             oncbYeelightIsDisabledChange="cbYeelightIsDisabledChange"
                            onddlYeelightLightsSelectionChanged="ddlYeelightLights_SelectionChanged"
                             onFindYeelightsClick="FindYeelights_Click"
                             onSaveYeelightsClick="SaveYeelight_Click"
/>
            </TabItem>
            <TabItem Header="Configure LIFX" >
                <lc:LIFX x:Name="lifx"
                         oncbIsLIFXEnabledChanged="cbIsLIFXEnabledChanged"
                         oncbLIFXIsDisabledChange="cbLIFXIsDisabledChange"
                         oncbUseLIFXActivityStatus="cbUseLIFXActivityStatus"
                         onCheckLIFXClick="CheckLIFX_Click"
                         onddlLIFXLightsSelectionChanged="ddlLIFXLights_SelectionChanged"
                         onLIFXTokenGet="LIFXToken_Get"
                         onSaveLIFXClick="SaveLIFX_Click"
                         

                         />
            </TabItem>
            <TabItem Header="Configure Custom API" >
                <lc:CustomApi x:Name="customapi"
                              onbtnApiSettingsSaveClick="btnApiSettingsSave_Click"
                              oncbIsCustomApiEnabledChanged="cbIsCustomApiEnabledChanged"
                              oncustomApiMethodSelectionChanged="customApiMethod_SelectionChanged"
                              />
            </TabItem>
            <TabItem Header="Settings" >
                <lc:Settings x:Name="settings"
                             oncbSyncLights="cbSyncLights"
                             oncbUseDefaultBrightnessChanged="cbUseDefaultBrightnessChanged"
                             oncbUseWorkingHoursChanged="cbUseWorkingHoursChanged"
                             onSaveSettingsClick="SaveSettings_Click"
                             ontimeValueChanged="time_ValueChanged"

                             />
            </TabItem>
            <TabItem Header="About" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="120" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <Border Grid.Row="1" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2">
                        <TextBlock FontSize="25" Text="PresenceLight by Isaac Levin">
                        </TextBlock>
                    </Border>

                    <Border VerticalAlignment="Top" Margin="0,40,0,0" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                        <TextBlock>
                            <Hyperlink FontSize="15" NavigateUri="https://github.com/isaacrlevin/presencelight" RequestNavigate="Hyperlink_RequestNavigate">
                                https://github.com/isaacrlevin/presencelight
                            </Hyperlink>
                        </TextBlock>
                    </Border>



                    <Image Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Height="100"  Source="/Images/profileimage.jpg"  Width="100"/>

                    <Label Grid.Column="1" Grid.Row="2" FontSize="15" Content="Package Name" Target="{Binding ElementName=packageName}" VerticalAlignment="Center" />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="2" FontSize="15" x:Name="packageName" Grid.Column="2"  VerticalAlignment="Center"  />

                    <Label Grid.Column="1" Grid.Row="4" FontSize="15" Content="Package Version" Target="{Binding ElementName=packageVersion}" VerticalAlignment="Center" />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="4" FontSize="15" x:Name="packageVersion" Grid.Column="2"  VerticalAlignment="Center" />

                    <Label Grid.Column="1" Grid.Row="6" FontSize="15" Content="Installed from" Target="{Binding ElementName=installedFrom}" VerticalAlignment="Center" />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="6" FontSize="15" TextWrapping="Wrap" x:Name="installedFrom" Grid.Column="2" VerticalAlignment="Center"  />

                    <Label Grid.Column="1" Grid.Row="8" FontSize="15" Content="Install Location" Target="{Binding ElementName=installLocation}"  />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="8" FontSize="15" TextWrapping="Wrap" x:Name="installLocation"  Grid.Column="2" VerticalAlignment="Center"  />

                    <Label Grid.Column="1" Grid.Row="12" FontSize="15" Content="Settings Location" Target="{Binding ElementName=installLocation}"  />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="12" FontSize="15" TextWrapping="Wrap" x:Name="settingsLocation"  Grid.Column="2" VerticalAlignment="Center"  />

                    <Label Grid.Column="1" Grid.Row="14" FontSize="15" Content="Install Date" Target="{Binding ElementName=installedDate}"  />
                    <TextBlock Grid.ColumnSpan="2" Grid.Row="14" FontSize="15" TextWrapping="Wrap" x:Name="installedDate" Grid.Column="2" VerticalAlignment="Center"   />

                    <Label Grid.Column="1" Grid.Row="16" FontSize="15" Content="Runtime Version" Target="{Binding ElementName=RuntimeVersionInfo}"  />
                    <TextBlock Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="RuntimeVersionInfo" FontSize="15" Grid.Row="16" Grid.Column="2" />

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
